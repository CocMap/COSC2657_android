<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5"
    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FF3333"
        android:textStyle="italic"
        android:gravity="center"
        android:text="Choose your favourite Hairstyle!"
        android:textSize="20dp"
        android:textAlignment="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">

            <ImageButton
                android:id="@+id/hairstyle1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/title"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/style1" />

                <ImageButton
                    android:id="@+id/hairstyle2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/style1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/style2" />

                <ImageButton
                    android:id="@+id/hairstyle3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/style2"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/style3" />

                <ImageButton
                    android:id="@+id/hairstyle4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/style3"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/style4" />

                <ImageButton
                    android:id="@+id/hairstyle5"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/style4"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/style5" />

            </LinearLayout>
    </ScrollView>
</LinearLayout>